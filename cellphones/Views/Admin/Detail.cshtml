@model cellphones.Models.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chi tiết sản phẩm</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Ảnh sản phẩm -->
                <div class="col-md-5">
                    <div class="product-image-container">
                        <img src="@Url.Content(Model.Image)" class="img-fluid rounded" alt="@Model.ProductName" />
                    </div>
                </div>

                <!-- Thông tin sản phẩm -->
                <div class="col-md-7">
                    <div class="product-details">
                        <h3 class="product-title mb-4">@Html.DisplayFor(model => model.ProductName)</h3>

                        <div class="info-group mb-3">
                            <label class="text-muted">Mô tả:</label>
                            <p class="description">@Html.DisplayFor(model => model.Description)</p>
                        </div>

                        <div class="info-group mb-3">
                            <label class="text-muted">Giá:</label>
                            <p class="price text-danger fw-bold">@Html.DisplayFor(model => model.Price)đ</p>
                        </div>

                        <div class="info-group mb-3">
                            <label class="text-muted">Danh mục:</label>
                            <p>@Html.DisplayFor(model => model.CategoryID)</p>
                        </div>

                        <div class="mt-4">
                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary me-2" })
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-secondary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-image-container {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

        .product-image-container img {
            max-width: 100%;
            height: auto;
            object-fit: contain;
        }

    .product-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .info-group label {
        font-size: 0.9rem;
        margin-bottom: 5px;
        display: block;
    }

    .price {
        font-size: 1.5rem;
        margin: 0;
    }

    .description {
        line-height: 1.6;
        color: #666;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>