<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
   
    <div class="header">
        <div>
            <div class="logo">SG Tech</div>
            @if (Session["name"] == null)
            {
                <div class="Login">
                    <a href="/Account/SginUp">Đăng ký</a>
                    <a href="/Account/Index">Đăng nhập</a>
                </div>
            }
            else
            {
                <div class="dropdown">
                    <span class="dropbtn">@Session["name"]</span>
                    <div class="dropdown-content">
                        <a href="@Url.Action("logout","Account")">Đăng xuất</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="container">
        <nav class="sidebar">
            <ul class="sidebar-nav">
                <li>
                    <a href="@Url.Action("Index","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Promotion" ? "active" : "")">
                        Product
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Promotion","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Promotion" ? "active" : "")">
                        Promotion
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Categoty","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Category" ? "active" : "")">
                        Category
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ManageStaff","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "ManageStaff" ? "active" : "")">
                        Manage Staff
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ManageUser","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "ManageUser" ? "active" : "")">
                        Manage User
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Order","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Order" ? "active" : "")">
                        Order
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Revenue","Admin")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Order" ? "active" : "")">
                        Revenue
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Chat")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Order" ? "active" : "")">
                        Chat
                    </a>
                </li>
            </ul>
        </nav>
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    /* Reset default margins and padding */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        min-height: 100vh;
    }

    /* Header styles */
    .header {
        background-color: #1a1a1a;
        height: 95px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        padding: 0 20px;
        display: flex;
        align-items: center;
    }
    .nav {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    /* Logo styles */
    .logo {
        margin-left:50px;
        position: absolute;
        left: 0;
        color: white;
        font-weight: bold;
        font-size: 1.5rem;
    }

    /* Main container */
    .container {
        display: flex;
        padding-top: 95px; /* Equal to header height */
        min-height: calc(100vh - 95px);
    }

    /* Sidebar styles */
    .sidebar {
        width: 15%;
        background-color: #2c2c2c;
        min-height: 100%;
        padding: 20px 0;
        position: fixed;
        left: 0;
        top: 95px;
        color: white;
    }

    /* Sidebar navigation */
    .sidebar-nav {
        list-style: none;
    }

        .sidebar-nav li {
            padding: 12px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .sidebar-nav li:hover {
                background-color: #3a3a3a;
            }

    /* Main content area */
    .main-content {
        margin-top:10px;
        margin-left: 18%; /* Equal to sidebar width */
        padding: 20px;
        width: 82%;
        background-color: white;
    }

    /* Table styles */
    .data-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .data-table th,
        .data-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .data-table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

    /* Button styles */
    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-edit {
        background-color: #f8f9fa;
        color: #333;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    /* Search box styles */
    .search-box {
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 300px;
    }

    /* Pagination styles */
    .pagination {
        margin-top: 20px;
        text-align: right;
    }

        .pagination a {
            padding: 8px 12px;
            text-decoration: none;
            color: #333;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            margin-left: 4px;
            border-radius: 4px;
        }

            .pagination a:hover {
                background-color: #e9ecef;
            }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        cursor: pointer;
        color: gray;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: gray;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }


    .dropdown:hover .dropdown-content {
        display: block;
    }
    //
    /* Sidebar base styles */
    .sidebar {
        background-color: #1E1E2D;
        width: 250px;
        height: 100%;
        position: fixed;
        left: 0;
        top: 95px;
        color: white;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

