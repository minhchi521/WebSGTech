        /* Divider between sections */
        .sidebar-nav::after {
            content: '';
            display: block;
            margin: 20px 16px;
            height: 1px;
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Active item indicator */
        .sidebar-nav a.active::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 24px;
            background-color: #00bcd4;
            border-radius: 2px 0 0 2px;
        }
