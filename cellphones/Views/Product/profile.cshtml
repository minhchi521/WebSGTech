@model cellphones.Models.User

@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_LayoutUser2.cshtml";
}

<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="menu-item active">
            <i class="fas fa-home"></i>
            Trang chủ
        </a>
        <a href="/Product/HistoryBuyProduct" class="menu-item">
            <i class="fas fa-history"></i>
            Lịch sử mua hàng
        </a>
        <a href="#" class="menu-item">
            <i class="fas fa-shield-alt"></i>
            Tra cứu bảo hành
        </a>
        <a href="/Product/offers" class="menu-item">
            <i class="fas fa-gift"></i>
            Ưu đãi của bạn
        </a>
        <a href="#" class="menu-item">
            <i class="fas fa-graduation-cap"></i>
            Chương trình S-Edu
            <span class="badge">HOT</span>
        </a>
        <a href="#" class="menu-item">
            <i class="fas fa-medal"></i>
            Hạng thành viên
        </a>
        <a href="/Product/EditProfile" class="menu-item">
            <i class="fas fa-user"></i>
            Tài khoản của bạn
        </a>
        <a href="#" class="menu-item">
            <i class="fas fa-link"></i>
            Liên kết tài khoản
            <span class="badge">MỚI</span>
        </a>
        <a href="/Chat/Messages" class="menu-item">
            <i class="fas fa-headset"></i>
            Hỗ trợ
        </a>
        <a href="#" class="menu-item">
            <i class="fas fa-comment-dots"></i>
            Góp ý - Phản hồi
        </a>
        <a href="/Account/logout" class="menu-item">
            <i class="fas fa-comment"></i>
            Đăng xuất
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="profile-card">
            @using (Html.BeginForm("profile", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form id="profileForm" enctype="multipart/form-data">
                    <div class="profile-header">
                        <div class="avatar-wrapper">
                            <img id="imagePreview" src="@Url.Content(Model.imageUser ?? "~/Content/images/user123.png")" alt="User Image">
                            <label for="UploadImage" class="avatar-upload">
                                <i class="fas fa-camera"></i>
                            </label>
                            <input type="file" name="UploadImage" id="UploadImage" hidden onchange="previewImage(event)">
                        </div>
                        <div class="user-info">
                            <h2 class="user-name">
                                @Html.DisplayFor(Model => Model.Username)
                            </h2>
                            <div class="user-id">
                                <div>
                                    @Html.DisplayFor(Model => Model.Phone)
                                </div>
                                <div class="status-badge">SNULL</div>
                            </div>
                        </div>
                    </div>

                    <h2 class="profile-title">Thông tin tài khoản</h2>

                    <div class="stats-container">
                        <div class="stat-box">
                            <div class="stat-number">1</div>
                            <div class="stat-label">đơn hàng</div>
                        </div>
                        <div class="stat-box">
                            <div class="stat-number">0đ</div>
                            <div class="stat-label">Tổng tiền tích lũy từ 01/01/2024</div>
                        </div>
                    </div>

                    <div class="info-message">
                        <i class="fas fa-info-circle"></i>
                        <p>Đăng ký S-Student/S-Teacher để nhận thêm ưu đãi tới 50k/sản phẩm.</p>
                        <a href="#" class="qrcode-btn">Đăng ký ngay</a>
                    </div>

                    <div class="info-message">
                        <i class="fas fa-info-circle"></i>
                        <p>Cập nhật thông tin cá nhân và địa chỉ để có trải nghiệm đặt hàng nhanh và thuận tiện hơn.</p>
                        <a href="#" class="qrcode-btn">Cập nhật</a>
                    </div>

                    <div class="form-group">
                        <div class="form-container">
                            <div class="input-icon">
                                <i class="fas fa-envelope"></i>
                                <div class="form-input">
                                    @Html.DisplayFor(Model => Model.Email)
                                </div>
                            </div>
                            <span class="text-danger" id="EmailError"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-container">
                            <div class="input-icon">
                                <i class="fas fa-lock"></i>
                                <div class="form-input">
                                    @Html.DisplayFor(Model => Model.Password)
                                </div>
                            </div>
                            <span class="text-danger" id="PasswordError"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-container">
                            <div class="input-icon">
                                <i class="fas fa-user"></i>
                                <div class="form-input">
                                    @Html.DisplayFor(Model => Model.FullName)
                                </div>
                            </div>
                            <span class="text-danger" id="FullNameError"></span>
                        </div>
                    </div>

                    <button type="submit" class="save-btn">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </form>
            }
                <div class="feature-buttons">
                    <a href="#" class="feature-button">
                        <i class="fas fa-medal"></i>
                        <span>Hạng thành viên</span>
                    </a>
                    <a href="#" class="feature-button">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Mã giảm giá</span>
                    </a>
                    <a href="#" class="feature-button">
                        <i class="fas fa-history"></i>
                        <span>Lịch sử mua hàng</span>
                    </a>
                    <a href="#" class="feature-button">
                        <i class="fas fa-graduation-cap"></i>
                        <span>S-Edu</span>
                    </a>
                    <a href="#" class="feature-button">
                        <i class="fas fa-link"></i>
                        <span>Liên kết tài khoản</span>
                    </a>
                    <a href="#" class="feature-button">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Số địa chỉ</span>
                    </a>
                </div>
            </div>

           <div class="barcode-section">
            <h3>Đưa mã này cho nhân viên để hưởng ưu đãi Smember</h3>
            <img src="/api/placeholder/300/80" alt="Barcode" class="barcode-img">
            <p class="barcode-info">Mã sẽ thay đổi sau 5:38s</p>
            <button class="qrcode-btn">Chuyển sang QRCode</button>
           </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        const imagePreview = document.getElementById("imagePreview");
        reader.onload = function () {
            imagePreview.src = reader.result;
        }
        if (event.target.files[0]) {
            reader.readAsDataURL(event.target.files[0]);
        }
    }

    document.getElementById('profileForm').addEventListener('submit', function (event) {
        event.preventDefault();

        // Form validation would go here

        // Simulate success
        alert('Thông tin tài khoản đã được cập nhật thành công!');
    });
</script>
